<%= form_for (@trip), url: "new" do |f| %>

  <div class="distance">
    <%= f.label :distance %><br>
   <%= f.number_field :distance, step:0.01, min: 0.01 %>
  </div>

  <div class="number_of_passengers">
    <%= f.label :number_of_passengers %><br>
   <%= f.number_field :number_of_passengers, min: 0 %>
  </div>

   <div class="car_name">
    <%= f.label :car_id %><br>
       <%= f.select(:car_id, Car.all.collect {|c| [ c.make+" "+c.model+" "+c.year.to_s + " [ID: " + c.id.to_s + "]", c.id ] }, {include_blank: 'None'}) %>
  </div>

    <div class="origin">
    <%= f.label :origin %><br>
   <%= f.text_field :origin %>
  </div>

   <div class="destination">
    <%= f.label :destination %><br>
   <%= f.text_field :destination %>
  </div>

   <div class="start_time">
    <%= f.label :start_time %><br>
   <%= f.datetime_field :start_time %>
   </div> 

  <div class="end_time">
       <%= f.label :end_time %><br>
    <%= f.datetime_field :end_time %>
  </div>
   
   <div class="actions">
  <%= f.submit %>
  </div>

<% end %>
