<h1>Trip List</h1>
<table class = "table">
    <thead>
        <tr>
            <th> Start Time </th>
            <th> End Time </th>
            <th> Distance </th>
            <th> Car </th>
            <th> Cost per passenger </th>
            <th> Number of passengers </th>
            <th> Origin </th>
            <th> Destination </th>
            <th> Total cost </th>
        </tr>
    </thead>
    <tbody> 
        <% @trips.each do |t| %>
            <tr>
                <td> <%= "#{t.start_time}" %> </td>
                <td> <%= "#{t.end_time}" %> </td>
                <td> <%= "#{t.distance}" %> </td>
                <% car = Car.where(id: t.id).first %>
                <td>
                    <% if car %>
                    <%= "#{car.make} #{car.model} #{car.year}" %>
                    <% else %>
                    <%= "NONE" %>
                    <% end %>
                </td>
                <td> <%= "#{t.base_cost}" %> </td>
                <td> <%= "#{t.number_of_passengers}" %> </td>
                <td> <%= "#{t.origin}" %> </td>
                <td> <%= "#{t.destination}" %> </td>
                <td> <%= "#{t.total_trip_cost}" %> </td>
            </tr>
        <% end %>
    </tbody>
</table>
