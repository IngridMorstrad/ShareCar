<!DOCTYPE html>
<html>
<head>
<title>ShareCar-Trips</title>
  <%= stylesheet_link_tag "application", media: "all", "data-turbolinks-track" => true %>
  <%= stylesheet_link_tag "navbar-fixed-top" %>
  <%= stylesheet_link_tag "password_resets" %>
  <%= csrf_meta_tags %>
</head>
<body id="page-top">
  <div class="container">
    <div class="navbar navbar-default navbar-fixed-top" role="navigation">
      <div class="container">
        <div class="navbar-header">
          <a class="navbar-brand page-scroll" href="#page-top">
            <i class="fa fa-car"></i>  <span class="light">ShareCar</span>
          </a>
        </div>

        <!-- Collect the nav links, forms, and other content for toggling -->
        <div class="collapse navbar-collapse">
          <ul class="nav navbar-nav">
            <li><strong><span class="navbar-text"><%= timepiece Time.zone.name %> <%= Time.zone.to_s %></span></strong></li>
          </ul>
          <ul class="nav navbar-nav navbar-right">
            <li><%= link_to "Login", log_in_path %></li>
            <li><%= link_to "Register", sign_up_path %></li>
            <li><%= link_to "Homepage", root_path, data:{no_turbolink: true} %></li>
          </ul>
        </div>
        <!-- /.navbar-collapse -->
      </div>
      <!-- /.container -->
    </div>
    <% flash.each do |key, value| -%>
      <div class="alert alert-<%= key %> alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="Close"><span aria-hidden="true">&times;</span></button>
        <%= value %>
      </div>
    <% end -%>
    <%= yield %>
  </div>
  <!-- Footer -->
  <hr>
  <footer>
      <div class="container text-center">
          <p>Copyright &copy; ShareCar 2015</p>
      </div>
  </footer>
  <%= javascript_include_tag "password_resets", "data-turbolinks-track" => true %>
</body>
</html>