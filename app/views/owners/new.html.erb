<div id="main_container" class="container">

  <div class="navbar navbar-default navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand page-scroll" href="#page-top">
          <i class="fa fa-car"></i>  <span class="light">ShareCar</span>
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse">
        <ul class="nav navbar-nav">
          <li><strong><span class="navbar-text"><%= timepiece Time.zone.name %> <%= Time.zone.to_s %></span></strong></li>
        </ul>
        <ul class="nav navbar-nav navbar-right">
          <li><strong><span class="navbar-text"><%= current_user.name %></span></strong></li>
          <li><%= link_to "Home", trips_path %></li>
          <li><%= link_to "Add Trip", new_trip_path %></li>
          <li><%= link_to "Add Car", new_car_path %></li>
          <li class="active"><%= link_to "Add Owner", new_owner_path %></li>
          <li><%= link_to "Log out", log_out_path, data:{no_turbolink: true} %></li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </div>

  <!-- Jumbotron -->
  <div class="jumbotron">
    <h1>Owners</h1>
    <p>Register an owner here.</p>
  </div>

  <div class="span4 well">
    <div class="form">
      <%= form_for @owner, url: "new" do |f| %>
        <div class="form-group">
          <%= f.label :user_id %><br>
          <%= f.select(:user_id, User.all.collect {|c| [c.name]}) %>
        </div>
        <div class="form-group">
          <%= f.label :car_id %><br>
          <%= f.select(:car_id, Owner.where(user_id: current_user.id).collect {|o| ["#{Car.find(o.car_id).make} #{Car.find(o.car_id).model} #{Car.find(o.car_id).year}"]}) %>
        </div>
        <div class="actions">
          <%= f.submit options={class: "btn btn-default"} %>
        </div>
      <% end %>
    </div>
  </div>

</div>