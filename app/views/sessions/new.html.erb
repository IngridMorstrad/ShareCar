  <div class="navbar navbar-custom navbar-fixed-top" role="navigation">
    <div class="container">
      <div class="navbar-header">
        <a class="navbar-brand page-scroll" href="#page-top">
          <i class="fa fa-car"></i>  <span class="light">ShareCar</span>
        </a>
      </div>

      <!-- Collect the nav links, forms, and other content for toggling -->
      <div class="collapse navbar-collapse navbar-right navbar-main-collapse">
        <ul class="nav navbar-nav">
          <!-- Hidden li included to remove active class from about link when scrolled up past about section -->
          <li class="hidden">
            <a href="#page-top"></a>
          </li>
          <li>
            <a data-toggle="modal" href="#login-overlay">Log in</a>
          </li>
          <li>
            <a class="page-scroll" href="#about">About</a>
          </li>
        </ul>
      </div>
      <!-- /.navbar-collapse -->
    </div>
    <!-- /.container -->
  </div>

  <div id="login-overlay" class="modal fade">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
          <h4 class="modal-title" id="myModalLabel">Log into ShareCar</h4>
        </div>
        <div class="modal-body">
          <div class="row">
            <div class="col-xs-6">
              <div class="well">
                  <%= form_tag log_in_path do %>
                    <div class="form-group">
                      <label for="email" class="control-label">Email</label>
                      <input type="text" class="form-control" id="email" name="email" value="" required="" title="Please enter your email address" placeholder="example@gmail.com">
                      <span class="help-block"></span>
                    </div>
                    <div class="form-group">
                      <label for="password" class="control-label">Password</label>
                      <input type="password" class="form-control" id="password" name="password" value="" required="" title="Please enter your password">
                      <span class="help-block"></span>
                    </div>
                    <div class="checkbox">
                      <label for="remember_me">
                          <input type="checkbox" name="remember_me" id="remember_me"> Remember me
                      </label>
                      <p class="help-block">(if this is a private computer)</p>
                    </div>
                    <button type="submit" class="btn btn-success btn-block">Login</button>
                    <%= link_to "Forgot password", new_password_reset_path, html_options = {:class => "btn btn-default btn-block"} %>
                  <% end %>
              </div>
            </div>
            <div class="col-xs-6">
              <p class="lead">Register now for <span class="text-success">FREE</span></p>
              <ul class="list-unstyled" style="line-height: 2">
                <li><span class="fa fa-check text-success"></span> Hitch a ride </li>
                <li><span class="fa fa-check text-success"></span> Offer to carpool </li>
                <li><span class="fa fa-check text-success"></span> Save fuel </li>
                <li><span class="fa fa-check text-success"></span> Save money </li>
                <li><span class="fa fa-check text-success"></span> Make friends! </li>
              </ul>
              <p><%= link_to "Register now!", sign_up_path, html_options = {:class => "btn btn-info btn-block"} %></p>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>

  <!-- Intro Header -->
  <header class="intro">
      <div class="intro-body">
          <div class="container">
              <div class="row">
                  <div class="col-md-8 col-md-offset-2">
                      <h1 class="brand-heading">ShareCar</h1>
                      <p class="intro-text">A simple travelling solution</p>
                      <a href="#about" class="btn btn-circle page-scroll">
                          <i class="fa fa-angle-double-down animated"></i>
                      </a>
                  </div>
              </div>
          </div>
      </div>
  </header>

  <!-- About Section -->
  <section id="about" class="container content-section text-center">
      <div class="row">
          <div class="col-lg-8 col-lg-offset-2">
              <h2>About ShareCar</h2>
                  <p>
                    At ShareCar, we realize that the number of vehicles on the road far exceeds
                    the number really needed to satisfy the general transportation needs. We seek to partially solve that problem
                    with a simple carpooling solution that creates a cleaner environment, reduces fuel wastage and saves you money!
                  </p>
          </div>
      </div>
  </section>

  <!-- Footer -->
  <footer>
      <div class="container text-center">
          <p>Copyright &copy; ShareCar 2015</p>
      </div>
  </footer>

</body>
