<div class="jumbotron">
  <h1>Password Reset</h1>
  <p>Choose a new password</p>
</div>

<div class="row-fluid">
  <div class="span4 well">
    <%= form_for @user, :url => password_reset_path(params[:id]), :class => "form" do |f| %>
      <% if @user.errors.any? %>
        <div id="error_explanation" class="alert alert-danger alert-block">
          <h2>Form is invalid</h2>
          <ul>
            <% for message in @user.errors.full_messages %>
              <li><%= message %></li>
            <% end %>
          </ul>
        </div>
      <% end %>
      <div class="form-group password-field">
        <%= f.label :password %> <br>
        <%= f.password_field :password, required: "" %>
      </div>
      <div class="form-group password-confirmation-field">
        <%= f.label :password_confirmation %> <br>
        <%= f.password_field :password_confirmation, required: "" %>
      </div>
      <div class="actions"><%= f.submit "Update Password", class: "btn btn-default" %></div>
    <% end %>
  </div>
</div>