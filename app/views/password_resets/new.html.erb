<div class="jumbotron">
	<h1>Password Reset</h1>
	<div class="form">	
		<%= form_tag password_resets_path do %>
		  <div class="field input-group">
		    <%= text_field_tag :email, params[:email], class: "form-control", placeholder: "Your email address" %>
		  </div>
		  <div class="actions"><%= submit_tag "Reset Password", class: "btn btn-success" %></div>
		<% end %>
	</div>
</div>